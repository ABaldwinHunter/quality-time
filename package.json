{
  "devDependencies": {
    "babel-jest": "*",
    "coffee-react": "^4.1.0",
    "coffee-react-transform": "^3.3.0",
    "coffee-script": "*",
    "jest-cli": "*",
    "react": "~0.14.0",
    "react-addons-test-utils": "~0.14.0",
    "react-dom": "~0.14.0"
  },
  "scripts": {
    "test": "jest"
  },
  "jest": {
    "scriptPreprocessor": "<rootDir>/tests/jest-preprocessor.js",
