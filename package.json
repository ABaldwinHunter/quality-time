    "testFileExtensions": [
      "coffee",
      "litcoffee",
      "coffee.md",
      "js",
      "cjsx"
    ],
    "moduleFileExtensions": [
      "coffee",
      "litcoffee",
      "coffee.md",
      "js",
      "cjsx"
    ]
  }
}
